  <.container class="mt-10">
    <.h2 underline label="Alerts" />
    <.h5 label="Default" class="mt-10" />
    <div class="flex items-start">
      <.alert
        color="info"
        label="This is an info state"
      />
    </div>
    <div class="flex items-start mt-4">
      <.alert
        color="success"
        label="This is a success state"
      />
    </div>
    <div class="flex items-start mt-4">
      <.alert
        color="warning"
        label="This is a warning state"
      />
    </div>
    <div class="flex items-start mt-4">
      <.alert
        color="danger">
        This is a danger state that is very long
      </.alert>
    </div>
    <div class="flex items-start max-w-sm mt-4">
      <.alert
        heading="Optional heading that is too long">
        This is quite a long paragraph that takes up more than one line.
      </.alert>
    </div>
    <.h5 label="With state icon" class="mt-10" />
    <div class="flex items-start">
      <.alert
        with_icon
        color="info"
        label="This is an info state"
      />
    </div>
    <div class="flex items-start mt-4">
      <.alert
        with_icon
        color="success"
        label="This is a success state"
      />
    </div>
    <div class="flex items-start mt-4">
      <.alert
        with_icon
        color="warning"
        label="This is a warning state"
      />
    </div>
    <div class="flex items-start mt-4">
      <.alert with_icon
        color="danger">
        This is a danger state that is very long
      </.alert>
    </div>
    <div class="flex items-start max-w-sm mt-4">
      <.alert
