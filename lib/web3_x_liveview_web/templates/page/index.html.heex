    <div class="flex items-start">
      <.alert
        with_icon
        close_button_properties={["phx-click": "do_something"]}
        color="info"
        label="This is an info state"
      />
    </div>
    <div class="flex items-start mt-4">
      <.alert
        with_icon
        close_button_properties={["phx-click": "do_something"]}
